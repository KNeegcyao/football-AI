  "globalStyle": {
    "navigationStyle": "custom",
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "Soccer Forum",
    "navigationBarBackgroundColor": "#1A1811",
    "backgroundColor": "#1A1811"
